{
  "name": "libreria-app",
  "version": "1.0.0",
  "description": "Aplicación para gestión de librería",
  "main": "server.js",
  "scripts": {
    "start": "npm install && cd client && npm install --legacy-peer-deps && NODE_OPTIONS=--openssl-legacy-provider npm run build && cd .. && node server.js",
    "server": "nodemon server.js",
    "client": "cd client && npm start",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build": "cd client && npm install && npm run build",
    "deploy": "firebase deploy",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install && npm install --prefix client && npm run build --prefix client",
    "install-all": "npm install && cd client && npm install && cd .."
  },
  "keywords": [
    "libreria",
    "postgres",
    "express",
    "react",
    "node"
  ],
  "author": "Juan David Beltran",
  "license": "ISC",
  "dependencies": {
    "@fortawesome/free-solid-svg-icons": "^6.7.2",
    "@fortawesome/react-fontawesome": "^0.2.2",
    "axios": "^1.9.0",
    "bootstrap": "^5.3.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "react": "^18.2.0",
    "react-bootstrap": "^2.10.10",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.14.0",
    "react-scripts": "^4.0.3"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.10"
  }
}
